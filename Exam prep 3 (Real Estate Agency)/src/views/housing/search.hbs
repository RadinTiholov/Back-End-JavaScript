
        <main>
            <form class="search" action="/housing/search" method="POST">
                <input type="search" name="search" placeholder="Search here...">
                <button type="submit">Search</button>
            </form>
            {{#if firstEnter}}
            {{else}}
            <section id="find-section">
                {{#each housings}}
                <!-- If there are any matching matches from the search, show each of them -->

                <div class="card">
                    <h3>{{name}}</h3>
                    <p>{{description}}</p>
                    <div class="cta-container"><a href="/housing/details/{{_id}}" class="det-link">Details</a></div>
                    <div class="card_circle"><img src={{homeImage}}></div>

                </div>
                {{else}}
                <!-- If there are no search matches, show: -->
                <div class="no-data-listing">
                    <p class="no-offer">No match was found for the submitted type...</p>
                </div>
                {{/each}}
            </section>
            {{/if}}
        </main>

        